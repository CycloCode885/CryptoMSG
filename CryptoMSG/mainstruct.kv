<MyLayout>
    do_default_tab: False

    #CRYPT TAB*********************************************
    TabbedPanelItem:
        text: 'Crypt'
        BoxLayout:
            width: .2
            orientation:'vertical'
            TextInput:
                foreground_color: (0/255, 220/255, 0/255, 1)
                background_color: (0/255, 40/255, 0/255, 1)
                halign: 'center'
                size_hint: (1, None)
                hint_text: 'insert key'
                multiline: False
                height: 30
                id: keyenc
            TextInput:
                foreground_color: (0/255, 220/255, 0/255, 1)
                background_color: (0/255, 40/255, 0/255, 1)
                hint_text: 'message to encrypt'
                id: encmsg
            Button:
                size_hint:(1, .2)
                text:'Encrypt'
                on_press: root.Encrypt()
            Button:
                size_hint:(1, .2)
                text:'Copy to clipboard'
                on_press: root.copyto()

    #DECRYPT TAB ********************************************
    TabbedPanelItem:
        text: 'Decrypt'
        BoxLayout:
            width: .2
            orientation:'vertical'
            TextInput:
                foreground_color: (0/255, 220/255, 0/255, 1)
                background_color: (0/255, 40/255, 0/255, 1)
                halign: 'center'
                size_hint: (1, None)
                hint_text: 'insert key'
                multiline: False
                height: 30
                id: keydec
            TextInput:
                foreground_color: (0/255, 220/255, 0/255, 1)
                background_color: (0/255, 40/255, 0/255, 1)
                hint_text: 'message to decrypt'
                id: decmsg
            Button:
                size_hint:(1, .2)
                text:'Decrypt'
                on_press: root.Decrypt()
            Button:
                size_hint:(1, .2)
                text:'Paste from clipboard'
                on_press: root.pastefrom()
    #ABOUT TAB**********************************************
    TabbedPanelItem:
        text: 'About'
        GridLayout:
            background_color: (0/255, 60/255, 0/255, 1)
            rows: 2
            width: .2
            Label:
                halign: 'center'
                text: '\nTo Encrypt a message, insert a keyword and write the message. When ready press the "Encrypt" button. Now you have an encrypted message. Press "Copy to clipboard" and paste the message on your favourite messaging App. If you want to decrypt a message, after copied an encrypted message, go to "Decrypt" Tab, insert the received keyword, press "Paste from Clipboard" and press the "Decrypt" button.'
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                color: (0/255, 220/255, 0/255, 1)
            Label:
                halign: 'center'
                text : '\nUse a keyword of your choice and share it with the receiver of your message to know it.\n!!! IF YOU FORGET THE KEYWORD THE MESSAGE IS LOST !!!'
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                color: (0/255, 220/255, 0/255, 1)
